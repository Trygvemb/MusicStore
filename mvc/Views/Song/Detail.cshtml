@model Song
@{
    ViewData["Title"] = "Song Page";
}

<div class="d-flex justify-content-between align-items-center">
    <h1>@Model.Name</h1>
    <a asp-controller="Song" asp-action="Delete" asp-route-id="@Model.SongId" class="btn btn-m btn-outline-danger">Delete Song</a>
</div>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    <div class="card-body">
                        <p class="card-text">@Model.Name</p>
                        <p class="card-text">@Model.SongUrl</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="Song" asp-action="Edit" asp-route-id="@Model.SongId" class="btn btn-sm btn-outline-primary">Edit</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
