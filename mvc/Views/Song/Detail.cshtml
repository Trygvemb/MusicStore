@model Song
@{
    ViewData["Title"] = "Song Page";
}

<div class="d-flex justify-content-between align-items-center">
    <h1>@Model.Name</h1>
    <button type="button" class="btn btn-m btn-outline-secondary">Add Album</button>
</div>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    <div class="card-body">
                        <p class="card-text">@Model.Name</p>
                        <p class="card-text">@Model.SongUrl</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                            </div>
                            <small class="text-muted">9 mins</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
