@model IEnumerable<Artist>

@{
    ViewData["Title"] = "Artist Page";
}

<div class="d-flex justify-content-between align-items-center">
    <h1>Artists</h1>
    <a asp-controller="Artist" asp-action="Create" class="btn btn-m btn-outline-primary">Add Artist</a>
</div>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <div class="card-body">
                            <p class="card-text">@item.Name</p>
                            <div class="d-flex justify-content-between align-items-center">
                                 <div class="btn-group">
                                    <a asp-controller="Artist" asp-action="Detail" asp-route-id="@item.ArtistId"
                                        class="btn btn-sm btn-outline-primary flex-grow-1">View</a>
                                    <a asp-controller="Artist" asp-action="Delete" asp-route-id="@item.ArtistId"
                                        class="btn btn-sm btn-outline-danger flex-grow-1">Remove</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
