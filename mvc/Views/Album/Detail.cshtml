@model Album

@{
    ViewData["Title"] = "Atist Page";
}
<div class="d-flex justify-content-between align-items-center">
<h1>@Model.Title</h1>
<a asp-controller="Song" asp-action="Create" asp-route-id="@Model.AlbumId" class="btn btn-m btn-outline-primary">Add Song</a>
</div>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Songs!)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <div class="card-body">
                            <p class="card-text">@item.Name</p>
                            @* <p class="card-text">@item.Genre.Name</p> *@

                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Song" asp-action="Detail" asp-route-id="@item.SongId" class="btn btn-sm btn-outline-primary">View</a>
                                    <a asp-controller="Song" asp-action="Delete" asp-route-id="@item.SongId" class="btn btn-sm btn-outline-danger">Remove</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
